{
  "version": 2,
  "builds": [
    {
      "src": "api/convert.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/convert.js" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}